# Environment Variables for Recipe RAG System

# OpenAI Configuration
    OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_BATCH_SIZE=32
OPENAI_RETRY_SECONDS=1.0


# Chroma Vector Database
CHROMA_PERSIST_DIR=./vectordata
CHROMA_COLLECTION=recipes

# Recipe Directory
RECIPE_DIR=../data/recipes

# Re-ranking Parameters
RERANK_EMBED_WEIGHT=0.75
RERANK_ING_WEIGHT=0.25
RERANK_TOPK_RAW=5

# Application Settings
RECIPES_DIRECTORY=data/recipes
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration  
STREAMLIT_PORT=8501

# RAG Parameters
DEFAULT_K=5
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small